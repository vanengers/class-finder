{
  "name": "vanengers/class-finder",
  "description": "Find classes (with namespaces) within folders",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Vanengers\\ClassFinder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Vanengers\\ClassFinder\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "George van Engers",
      "email": "vanengers@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0 || ^7.4",
    "symfony/finder": "^5.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}